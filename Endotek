    </footer>

    <div class="floating-action-buttons">
        <span class="fab-item" onclick="toggleModal('ussd-modal-overlay')" role="button" aria-label="USSD Mode"><i class="fas fa-mobile-alt"></i> USSD</span>
        <span class="fab-item" id="offline-status" role="status" aria-label="Offline Mode Indicator"><i class="fas fa-plug"></i> Offline Mode</span>
    </div>

    <div id="premium-modal-overlay" class="modal-overlay" onclick="toggleModal(this.id)">
        <div class="modal-content" onclick="event.stopPropagation()">
            <h3>Endotek Premium Access</h3>
            <p>Unlock advanced features and exclusive content:</p>
            <ul>
                <li>Ad-free Browse experience</li>
                <li>Priority customer support & dedicated account manager</li>
                <li>**For Investors:** Exclusive deep-dive project reports & early access to new initiatives</li>
                <li>**For Community:** Advanced skill-building courses & private networking events</li>
            </ul>
            <p>Choose your plan:</p>
            <button onclick="alert('Investor Premium Subscribed! (Simulated)')">Investor Premium (₦30,000/yr)</button>
            <button onclick="alert('Community Premium Subscribed! (Simulated)')">Community Premium (₦500/month)</button>
            <button onclick="toggleModal('premium-modal-overlay')">Close</button>
        </div>
    </div>

    <div id="chatbot-modal-overlay" class="modal-overlay" onclick="toggleModal(this.id)">
        <div class="modal-content" onclick="event.stopPropagation()">
            <h3>Endotek AI Assistant</h3>
            <p id="chatbot-response">Hello! I'm your Endotek AI Assistant. How can I help you learn about our sustainable initiatives, investment opportunities, or community programs?</p>
            <input type="text" id="chatbot-input" placeholder="Ask about Endotek..." aria-label="Chatbot Input">
            <button onclick="simulateChatbot()" aria-label="Send Chatbot Message">Send</button>
            <button onclick="toggleModal('chatbot-modal-overlay')">Close</button>
        </div>
    </div>

    <div id="ussd-modal-overlay" class="modal-overlay" onclick="toggleModal(this.id)">
        <div class="modal-content" onclick="event.stopPropagation()">
            <h3>Endotek USSD Mobile Hub</h3>
            <p style="font-family: monospace; text-align: left; background-color: #f0f0f0; padding: 15px; border-radius: 8px; margin-bottom: 25px;">
                Welcome to Endotek Mobile Hub!<br>
                1. Explore Projects<br>
                2. Partner with Us<br>
                3. Join Community Forum<br>
                4. Access Skill-Share<br>
                5. Check Impact Metrics<br>
                * Reply with option number
            </p>
            <select id="ussd-option" aria-label="Select USSD Option">
                <option value="1">1. Explore Projects</option>
                <option value="2">2. Partner with Us</option>
                <option value="3">3. Join Community Forum</option>
                <option value="4">4. Access Skill-Share</option>
                <option value="5">5. Check Impact Metrics</option>
            </select>
            <button onclick="simulateUSSD()">Submit Option</button>
            <button onclick="toggleModal('ussd-modal-overlay')">Close</button>
        </div>
    </div>

    <script>
        // --- Core Functions ---

        // Smooth scroll for internal navigation links
        document.querySelectorAll('.nav-links a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
                // Update active class for nav links
                document.querySelectorAll('.nav-links a').forEach(link => link.classList.remove('active'));
                this.classList.add('active');
            });
        });

        // Sticky Header with Scroll Effect
        window.addEventListener('scroll', () => {
            const header = document.querySelector('.header');
            if (window.scrollY > 50) { // Adjust scroll threshold as needed
                header.classList.add('scrolled');
            } else {
                header.classList.remove('scrolled');
            }
        });

        // Section Fade-In on Scroll
        const sections = document.querySelectorAll('section');
        const fadeInOnScroll = () => {
            sections.forEach(section => {
                const sectionTop = section.getBoundingClientRect().top;
                const windowHeight = window.innerHeight;
                if (sectionTop < windowHeight * 0.8) { // When 80% of section is visible
                    section.classList.add('fade-in');
                }
            });
        };
        window.addEventListener('scroll', fadeInOnScroll);
        fadeInOnScroll(); // Run on load to fade in visible sections immediately

        // Toggle Modals (reusable for Premium, Chatbot, USSD)
        function toggleModal(modalId) {
            const modal = document.getElementById(modalId);
            modal.classList.toggle('active');
            document.body.style.overflow = modal.classList.contains('active') ? 'hidden' : ''; // Prevent scroll when modal is active
        }

        // --- Investor Portal & Community Hub Tab System ---

        // Main Tabs (Investor Portal / Community Hub)
        function showTab(tabId, element) {
            // Deactivate all main tabs and buttons
            document.querySelectorAll('.content-tab-panel').forEach(tab => tab.classList.remove('active'));
            document.querySelectorAll('.tab-navigation button').forEach(btn => btn.classList.remove('active'));

            // Activate selected tab and button
            document.getElementById(tabId).classList.add('active');
            element.classList.add('active');

            // If switching to Investor Portal, trigger metrics animation
            if (tabId === 'investor-portal-tab') {
                updateInvestorMetrics();
            } else if (tabId === 'community-hub-tab') {
                // Ensure the active sub-tab is shown for community hub
                const firstSubTabButton = document.querySelector('#community-hub-tab .sub-tab-navigation button.active');
                if (firstSubTabButton) {
                    showSubTab(firstSubTabButton.dataset.target, firstSubTabButton);
                } else { // If no active sub-tab, activate the first one by default
                    const defaultSubTabButton = document.querySelector('#community-hub-tab .sub-tab-navigation button');
                    if (defaultSubTabButton) {
                        showSubTab(defaultSubTabButton.dataset.target, defaultSubTabButton);
                    }
                }
            }
        }

        // Sub-Tabs (Forum, Skills, Marketplace, Crowdfunding)
        function showSubTab(subTabId, element) {
            // Deactivate all sub-tab panels and buttons within the current main tab
            document.querySelectorAll('.sub-content-panel').forEach(panel => panel.classList.remove('active'));
            document.querySelectorAll('.sub-tab-navigation button').forEach(btn => btn.classList.remove('active'));

            // Activate selected sub-tab panel and button
            document.getElementById(subTabId).classList.add('active');
            element.classList.add('active');
            element.closest('.tab-section').scrollIntoView({ behavior: 'smooth', block: 'start' }); // Scroll to the tab section
        }

        // --- Metrics Animation & Update ---
        let investorMetrics = {
            capitalDeployed: { value: 500000000, target: 700000000 },
            scaledProjects: { value: 12, target: 20 },
            beneficiaryCount: { value: 150000, target: 200000 }
        };

        function updateInvestorMetrics() {
            // Use setTimeout to ensure the CSS transition runs from initial 0% width
            setTimeout(() => {
                // Capital Deployed
                const capitalEl = document.getElementById('capital-deployed');
                const capitalProgressFill = document.getElementById('capital-progress');
                const capitalProgressText = capitalProgressFill.querySelector('.progress-text');
                capitalEl.textContent = '₦' + investorMetrics.capitalDeployed.toLocaleString();
                const capitalPercentage = Math.min((investorMetrics.capitalDeployed / investorMetrics.capitalDeployed.target) * 100, 100);
                capitalProgressFill.style.width = `${capitalPercentage}%`;
                capitalProgressText.textContent = `${Math.round(capitalPercentage)}%`;

                // Scaled Projects
                const scaledEl = document.getElementById('scaled-projects');
                const scaledProgressFill = document.getElementById('scaled-progress');
                const scaledProgressText = scaledProgressFill.querySelector('.progress-text');
                scaledEl.textContent = investorMetrics.scaledProjects.toLocaleString();
                const scaledPercentage = Math.min((investorMetrics.scaledProjects / investorMetrics.scaledProjects.target) * 100, 100);
                scaledProgressFill.style.width = `${scaledPercentage}%`;
                scaledProgressText.textContent = `${Math.round(scaledPercentage)}%`;

                // Community Beneficiaries
                const beneficiaryEl = document.getElementById('beneficiary-count');
                const beneficiaryProgressFill = document.getElementById('beneficiary-progress');
                const beneficiaryProgressText = beneficiaryProgressFill.querySelector('.progress-text');
                beneficiaryEl.textContent = investorMetrics.beneficiaryCount.toLocaleString();
                const beneficiaryPercentage = Math.min((investorMetrics.beneficiaryCount / investorMetrics.beneficiaryCount.target) * 100, 100);
                beneficiaryProgressFill.style.width = `${beneficiaryPercentage}%`;
                beneficiaryProgressText.textContent = `${Math.round(beneficiaryPercentage)}%`;
            }, 100); // Small delay
        }

        // --- Simulated Interactions ---

        // USSD Simulation
        function simulateUSSD() {
            const option = document.getElementById('ussd-option').value;
            let responseMessage = `USSD Response: You selected option ${option}. Processing...`;
            alert(responseMessage);
            toggleModal('ussd-modal-overlay'); // Close USSD modal after selection
            
            // Navigate based on USSD option
            if (option === '1') { // Explore Projects
                document.getElementById('projects').scrollIntoView({ behavior: 'smooth' });
            } else if (option === '2') { // Partner with Us
                document.getElementById('contact').scrollIntoView({ behavior: 'smooth' });
            } else if (option === '3') { // Join Community Forum (simulated click)
                showTab('community-hub-tab', document.querySelector('.tab-navigation button:nth-child(2)'));
                showSubTab('forum-panel', document.querySelector('#community-hub-tab .sub-tab-navigation button:nth-child(1)'));
            } else if (option === '4') { // Access Skill-Share (simulated click)
                showTab('community-hub-tab', document.querySelector('.tab-navigation button:nth-child(2)'));
                showSubTab('skills-panel', document.querySelector('#community-hub-tab .sub-tab-navigation button:nth-child(2)'));
            } else if (option === '5') { // Check Impact Metrics
                showTab('investor-portal-tab', document.querySelector('.tab-navigation button:nth-child(1)'));
                // No need to scroll specifically, showTab already scrolls to the parent tab-section
            }
        }

        // Chatbot Simulation
        function simulateChatbot() {
            const input = document.getElementById('chatbot-input').value.toLowerCase();
            const responseEl = document.getElementById('chatbot-response');
            let response = 'I am Endotek\'s AI Assistant. How can I help you learn about our sustainable initiatives in Nigeria?';

            if (input.includes('invest') || input.includes('partner') || input.includes('investor')) {
                response = 'Interested in investing? Endotek offers transparent impact investment opportunities with real-time metrics. Visit our Investor Portal for details!';
            } else if (input.includes('community') || input.includes('hub') || input.includes('join')) {
                response = 'Our Community Hub connects Nigerians for skill-sharing, local commerce, and transparent crowdfunding of impactful projects.';
            } else if (input.includes('project') || input.includes('impact') || input.includes('initiatives')) {
                response = 'Endotek focuses on Environmental Solutions, Agricultural Innovation, and Community Development. Explore our "Our Initiatives" section for specific projects and case studies.';
            } else if (input.includes('ceo') || input.includes('founder') || input.includes('leadership')) {
                response = 'Our founder and CEO is Prof E.O Ekanem FCSN, a globally recognized Environmental and Analytical Chemist who drives our scientific approach.';
            } else if (input.includes('premium')) {
                response = 'Endotek Premium offers enhanced features like ad-free access, priority support, and exclusive content. It\'s available for both investors and community members with tailored benefits.';
            } else if (input.includes('contact')) {
                response = 'You can reach our team via the contact form at the bottom of this page or send an email directly to info@endotek.org.';
            } else if (input.includes('location') || input.includes('office')) {
                response = 'Our Head Office is located in Abuja, Nigeria. We operate and impact communities across the country.';
            } else if (input.includes('thanks') || input.includes('thank you')) {
                response = 'You\'re welcome! Is there anything else I can assist you with?';
            }
            else {
                response = 'I am still learning and evolving! Please try rephrasing your question or explore our website sections for more comprehensive information. Feel free to contact our human team if your query is urgent.';
            }
            
            responseEl.textContent = response;
            document.getElementById('chatbot-input').value = ''; // Clear input field
        }

        // Language selection
        document.getElementById('language').addEventListener('change', function() {
            const langName = this.options[this.selectedIndex].text;
            alert(`Language switched to: ${langName}. (Full localization coming soon!)`);
            // In a real application, you would load translations here
        });

        // Offline Mode Indicator (simple network status check)
        window.addEventListener('load', () => {
            const offlineIndicator = document.getElementById('offline-status');
            const updateOnlineStatus = () => {
                if (navigator.onLine) {
                    offlineIndicator.innerHTML = '<i class="fas fa-globe"></i> Online Mode';
                    offlineIndicator.style.backgroundColor = 'var(--endotek-blue-medium)';
                } else {
                    offlineIndicator.innerHTML = '<i class="fas fa-plug"></i> Offline Mode';
                    offlineIndicator.style.backgroundColor = '#6c757d'; // A grey color for offline
                }
            };
            
            updateOnlineStatus(); // Set initial status
            window.addEventListener('online', updateOnlineStatus);
            window.addEventListener('offline', updateOnlineStatus);
        });

        // --- Initial Load Actions ---
        document.addEventListener('DOMContentLoaded', () => {
            // Activate the first main tab by default
            const firstMainTabButton = document.querySelector('.tab-navigation button:first-child');
            if (firstMainTabButton) {
                showTab('investor-portal-tab', firstMainTabButton);
            }
            // Activate the first sub-tab of the community hub by default
            const firstSubTabButton = document.querySelector('#community-hub-tab .sub-tab-navigation button:first-child');
            if (firstSubTabButton) {
                showSubTab('forum-panel', firstSubTabButton);
            }

            // Ensure images load correctly or show placeholders
            document.querySelectorAll('img').forEach(img => {
                img.onerror = function() {
                    this.src = 'https://via.placeholder.com/400x280/ccc/fff?text=Image+Not+Found'; // Fallback generic placeholder
                };
            });
        });
    </script>
</body>
</html>
